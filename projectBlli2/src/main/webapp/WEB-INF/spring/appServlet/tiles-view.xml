<?xml version="1.0" encoding="UTF-8"?>
<!-- 타일즈 설정파일 -->
 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<!-- 컨트롤러에서 view name을 아래 definition name으로 반환하면 TilesViewResolver에 의해 include 
	된 여러 페이지 조합결과 화면이 반환된다. -->
<tiles-definitions>
	<definition name="home" template="/WEB-INF/views/templates/layout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/views/templates/header.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/templates/footer.jsp" />
		<put-attribute name="main" value="/WEB-INF/views/main.jsp" />
	</definition>
</tiles-definitions>