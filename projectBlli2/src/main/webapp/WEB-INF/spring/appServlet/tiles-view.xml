<?xml version="1.0" encoding="UTF-8"?>
<!-- 타일즈 설정파일 -->
 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<!-- 컨트롤러에서 view name을 아래 definition name으로 반환하면 TilesViewResolver에 의해 include 
	된 여러 페이지 조합결과 화면이 반환된다. -->

<tiles-definitions>
	<definition name="home" template="/WEB-INF/views/tilesTemplates/layout.jsp">
		<put-attribute name="header"  value="/WEB-INF/views/tilesTemplates/header.jsp"  />
		<put-attribute name="footer"  value="/WEB-INF/views/tilesTemplates/footer.jsp"  />
		<put-attribute name="main"  value="/WEB-INF/views/blli/main.jsp"  />
	</definition>
	
	<definition name="mainPage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/blli/main.jsp" />
	</definition>	
	
	<definition name="midCategoryDetailPage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/blli/midCategoryDetailPage.jsp" />
	</definition>	
	
	<definition name="smallProductDetailPage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/blli/smallProductDetailPage.jsp" />
	</definition>	
	
	<definition name="modifyBabyInfoPage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/blli/modifyBabyInfo.jsp" />
	</definition>
	
	<definition name="modifyMemberInfoPage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/blli/modifyMemberInfo.jsp" />
	</definition>
		
	<definition name="calendarPage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/calendar/calendar.jsp" />
	</definition>
		
	<definition name="addSchedulePage" extends="home">
		<put-attribute name="main"  value="/WEB-INF/views/calendar/addSchedule.jsp" />
	</definition>	
</tiles-definitions>